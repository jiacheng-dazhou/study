<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.stock.StockMapper">

    <select id="selectByCondition" resultType="com.study.entity.StockEntity">
        select *
        from stock
        <where>
            product_code = #{product_code} for update
        </where>
    </select>
</mapper>