<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.user.DeptMapper">

    <resultMap id="DeptUserListMap" type="com.study.entity.DeptUserEntity">
        <id column="id" property="id"/>
        <result column="dept_id" property="dept_id"/>
        <result column="dept_name" property="dept_name"/>
        <collection property="userList" ofType="com.study.entity.UserEntity">
            <result column="user_name" property="user_name"/>
            <result column="age" property="age"/>
            <result column="gender" property="gender"/>
        </collection>
    </resultMap>

    <select id="selectDeptUserList" resultMap="DeptUserListMap">
        select *
        from dept d
        inner join user u on d.dept_id = u.dept_id
        <where>
            d.dept_id IN
            <foreach collection="deptIds" item="dept_id" open="(" close=")" separator=",">
                #{dept_id}
            </foreach>
        </where>
    </select>
</mapper>